{
  "name": "u360",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "test": "ng test",
    "e2e": "npx playwright test",
    "e2e-ui": "npx playwright test --ui",
    "e2e-reports": "npx playwright show-report",
    "watch": "ng build --watch --configuration development",
    "start": "node --max_old_space_size=10240 ./node_modules/@angular/cli/bin/ng serve",
    "build_dev": "node --max_old_space_size=10240 ./node_modules/@angular/cli/bin/ng build --base-href / --configuration development",
    "build_prod": "node --max_old_space_size=10240 ./node_modules/@angular/cli/bin/ng build --base-href / --configuration production",
    "analyze_build": "ng build --stats-json",
    "analyze_report": "npm run build_stats-json & webpack-bundle-analyzer dist/fsd-fe/stats.json",
    "unit-test": "vitest",
    "unit-test-ui": "vitest --ui --coverage.enabled=true",
    "unit-test-coverage": "vitest run --coverage"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/cdk": "^18.0.1",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/material": "^18.0.1",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@angular/service-worker": "^18.0.0",
    "@jsverse/transloco": "^7.4.2",
    "animate.css": "^4.1.1",
    "hotkeys-js": "^3.13.7",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "nanoid": "^5.0.7",
    "ngx-skeleton-loader": "^9.0.0",
    "ngx-toastr": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.2",
    "@angular/cli": "^18.0.2",
    "@angular/compiler-cli": "^18.0.0",
    "@playwright/test": "^1.44.1",
    "@types/jasmine": "~5.1.0",
    "@types/lodash": "^4.17.4",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.14.0",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.19",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.4.2",
    "vitest": "^1.6.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
